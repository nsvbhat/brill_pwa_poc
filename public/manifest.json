{
  "id": "/Brillio-health-pwa",
  "lang": "en-US",
  "name": "Brillio Health PWA",
  "short_name": "Brillio",
  "description": "Your health, simplified. Access health information 24/7.",
  "version": "1.0.2",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "display_override": ["standalone", "window-controls-overlay"],
  "orientation": "portrait-primary",
  "theme_color": "#7f5bff",
  "background_color": "#7f5bff",
  "prefer_related_applications": false,
  "categories": ["health", "medical"],
  "screenshots": [
    {
      "src": "/Brillio-logo-new-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "form_factor": "narrow"
    }
  ],
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "application/pdf": [".pdf"],
        "application/msword": [".doc"],
        "application/vnd.openxmlformats-officedocument.wordprocessingml.document": [".docx"],
        "application/vnd.ms-excel": [".xls"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"],
        "text/plain": [".txt"],
        "image/jpeg": [".jpg", ".jpeg"],
        "image/png": [".png"]
      },
      "launch_type": "single-client"
    }
  ],
  "permissions": [
    "camera",
    "microphone",
    "geolocation"
  ],
  "icons": [
    {
      "src": "/Brillio-logo-new.png",
      "sizes": "any",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/Brillio-logo-new-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/Brillio-logo-new-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ]
}
